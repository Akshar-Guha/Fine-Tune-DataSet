# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/modelops
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=modelops

# MinIO / S3 Configuration
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=modelops
AWS_ALLOW_HTTP=true

# Temporal Configuration
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_S3_ENDPOINT_URL=http://localhost:9000

# HuggingFace Token
HUGGING_FACE_HUB_TOKEN=your_hf_token_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# JWT Secret for Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Observability
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
PROMETHEUS_PORT=9090

# Storage Paths
DELTA_LAKE_BASE_PATH=s3://modelops/delta
LANCEDB_PATH=s3://modelops/lancedb
ARTIFACTS_PATH=/artifacts

# Model Serving
TGI_ENDPOINT=http://localhost:8081
VLLM_ENDPOINT=http://localhost:8082

# Security
ENABLE_SIGNATURE_VERIFICATION=true
SIGNING_KEY_PATH=/keys/private.pem

# Feature Flags
ENABLE_SNN_FEATURES=true
ENABLE_MARKETPLACE=true
ENABLE_PLUGINS=true
